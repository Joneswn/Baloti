#NEW README DRAFT

sudo apt update
sudo apt upgrade

#INSTALL / RUN POSTGRESQL
sudo apt-get install postgresql
sudo systemctl start postgresql
#Create DB user
sudo passwd postgres
su - postgres
createdb electeez 
createuser <your_user_id> 
exit

#INSTALL / RUN MEMCACHED
sudo apt install memcached
systemctl enable memcached
systemctl start memcached


#INSTALL / ELECTEEZ (ELECTIS.APP)
git clone -b franck https://gitlab.com/electisNGO/electeez.git
cd electeez
sudo apt -y install python3.9-dev
sudo apt -y install python3.9-venv
python3.9 -m venv my_env
source ./my_env/bin/activate

#INSTALL IPFS 
Cf https://ipfs.io/ipns/dist.ipfs.io/#go-ipfs
Then launch ipfs init

#INSTALL DOCKER 
sudo apt  install docker.io  for Ubuntu
sudo docker run --name tz --publish 8732:8732 yourlabs/tezos

# If you intend to run tests, then you also need to add `tz` to /etc/hosts, at
# the end of line starting with 127.0.0.1. Example:

    127.0.0.1 localhost tez


make 
make data
make run

Add user -> sign-up -> check logs and copy the link 

make lang

#ADD USER TO ADMIN 
./manage.py shell_plus
u = User.objects.get(email=“<your_user_email>”)
u.is_superuser = True
u.is_staff = True
u.save()
quit()

make run

